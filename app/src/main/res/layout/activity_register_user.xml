<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/landing_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/background_marry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#80000000"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            fontPath="fonts/Lustria-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Korisničko ime"
            tools:ignore="MissingPrefix" />

        <EditText
            android:id="@+id/username_edit_text"
            fontPath="fonts/Lustria-Regular.ttf"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/register_user_btn"
            fontPath="fonts/Lustria-Regular.ttf"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_white"
            android:text="Nastavi"
            android:textColor="@color/status_bar"
            tools:ignore="MissingPrefix" />

    </LinearLayout>

    <ImageView
        android:id="@+id/flower_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:alpha="0.8"
        android:src="@mipmap/flower"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>